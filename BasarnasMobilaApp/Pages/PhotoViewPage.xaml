<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasarnasMobilaApp.Pages.PhotoViewPage"
             Title="PhotoViewPage">
    <Grid Padding="10" >
        <Frame Padding="10">
            <Grid RowDefinitions="*, auto">
                <Image Aspect="Fill" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Source="{Binding Photo}"></Image>
                <Button Clicked="Button_Clicked" Grid.Row="1" Text="Close" Margin="10" HorizontalOptions="End"></Button>
            </Grid>
        </Frame>
    </Grid>

</ContentPage>