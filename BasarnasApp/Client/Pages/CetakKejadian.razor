<div style="width:100%; margin-bottom:50px; display:flex;justify-content:center;flex-direction:column; align-items:center">
    <h4>LAPORAN KEJADIAN </h4>
    @if (Range != null)
    {
        <h3>@ShowDate()</h3>
    }
</div>



<table class="table-cetak">
    <tr>
        <th>No</th>
        <th>Kode</th>
        <th>Tanggal</th>
        <th>Distrik</th>
        <th>Kejadian</th>
        <th>Pelapor</th>
        <th>Status</th>
    </tr>
    @if (Datas != null)
    {
        @foreach (var item in @Datas.Select((x, i) => new { Data = x, index = i }))
        {
            <tr>

                <td>@(item.index + 1)</td>
                <td>@item.Data.Kode</td>
                <td>@item.Data.Tanggal</td>
                <td>@item.Data.DistrictName</td>
                <td>@item.Data.JenisKejadianName</td>
                <td>@item.Data.PelaporName</td>
                <td>@item.Data.Status</td>
            </tr>
        }
    }
</table>

@code {
    [Parameter]
    public IEnumerable<KejadianRequest> Datas { get; set; }


    [Parameter]
    public DateRange Range { get; set; }



    public List<Penyebab> Penyebabs=> Enum.GetValues(typeof(Penyebab)).Cast<Penyebab>().ToList();


    protected override Task OnInitializedAsync()
    {


        return base.OnInitializedAsync();
    }

    string ShowDate()
    {

        return $"{DateOnly.FromDateTime(Range.Start.Value).ToString()} - {DateOnly.FromDateTime(Range.End.Value).ToString()}";
    }
}


